<%- include('../partials/header') %>

<h1>Edit Skill: <%= skill.skill%></h1>

<form action="/skills/<%= skill.id %>?_method=PUT" method="POST" autocomplete="off">
    <input type="text" name="skill" value="<%= skill.skill%>">
    <br>
    <input type="checkbox" name="achieved" id="achieved"<%= skill.achieved ? 'checked' : '' %>>
    <label for="achieved">Achieved?</label>
    <br>
    <input type="submit" value="Save Changes">
</form>

<form action="/skills/<%= skill.id %>" method="GET" autocomplete="off">
    <input type="submit" value="Discard Changes">
</form>


<%-include('../partials/footer') %>